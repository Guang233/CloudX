<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextAppearance.CollapsingToolbar.ExpandedTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <!-- 文字颜色 -->
        <item name="android:textColor">@android:color/white</item>
        <!-- 阴影效果 -->
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">6</item>
    </style>

    <style name="TextAppearance.CollapsingToolbar.ExpandedSubtitle" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">5</item>
    </style>

</resources>