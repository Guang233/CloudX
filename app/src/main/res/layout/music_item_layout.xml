<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/musicCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="2dp"
        android:clickable="true"
        android:focusable="true"
        android:checkable="true"
        app:cardBackgroundColor="?android:colorBackground"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:strokeColor="?attr/colorOutline"
        app:strokeWidth="1dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?android:attr/selectableItemBackground"
            android:padding="10dp">

        <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/musicIcon"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/ic_launcher"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.MediumComponent"
                android:layout_marginEnd="12dp"/>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/musicName"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:text="MusicName"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"/>

            <TextView
                    android:id="@+id/musicAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:text="Author"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="12sp"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
                android:id="@+id/downloadMusicIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="12dp"
                android:layout_gravity="center"
                android:contentDescription="下载"
                style="?attr/materialIconButtonStyle"
                app:icon="@drawable/download_24px"
                app:iconSize="26dp"
                app:iconGravity="textEnd"
                app:iconTint="?attr/colorOnSurfaceVariant"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>